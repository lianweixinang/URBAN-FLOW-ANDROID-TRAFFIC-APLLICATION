<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

<TableLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:background="#F0F0F0"
    android:id="@+id/weather_page"
    android:collapseColumns="*" >
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/position"
            android:text="目前位置"
            android:textSize="35dp"
            android:layout_span="4"
            android:textColor="#3C3C3C"
            android:layout_gravity="center" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/now_weather"
            android:layout_width="wrap_content"
            android:text="36℃"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#3C3C3C" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        tools:ignore="UselessParent">
        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_span="4"
            android:padding="3dp"
            app:srcCompat="@drawable/cloudy" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/now_weather_text"
            android:text="晴時多雲"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#3C3C3C" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_top_corner_no_bottom_line"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        tools:ignore="UselessParent">
        <TextView
            android:id="@+id/time_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:00~15:00"
            android:textColor="#3C3C3C"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize = "22sp" />
        <ImageView
            android:id="@+id/pic_1"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/cloudy" />
        <TextView
            android:id="@+id/rain_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0%"
            android:textColor="#0080FF"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textSize = "20sp" />
        <TextView
            android:id="@+id/weather_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="30℃"
            android:textColor="#3C3C3C"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textSize = "20sp" />
        </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_no_corner_without_bottom"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:gravity="center">
        <TextView
            android:id="@+id/time_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="15:00~18:00"
            android:textColor="#3C3C3C"
            android:layout_marginRight="10dp"
            android:textSize = "22sp"
            android:gravity="center"    />
