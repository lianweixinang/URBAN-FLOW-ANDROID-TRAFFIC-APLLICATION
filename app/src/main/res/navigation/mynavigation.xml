<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mynavigation"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="ntutifm.game.google.ui.map.MapFragment"
        android:label="MapFragment" >
        <action
            android:id="@+id/action_mapFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" />
        <action
            android:id="@+id/action_mapFragment_to_instructionFragment"
            app:destination="@id/instructionFragment" />
        <action
            android:id="@+id/action_mapFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_mapFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
        <action
            android:id="@+id/action_mapFragment_to_oilFragment"
            app:destination="@id/oilFragment" />
        <action
            android:id="@+id/action_mapFragment_to_routeFragment"
            app:destination="@id/routeFragment" />
    </fragment>
    <fragment
        android:id="@+id/weatherFragment"
        android:name="ntutifm.game.google.ui.weather.WeatherFragment"
        android:label="WeatherFragment" >
        <action
            android:id="@+id/action_weatherFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/instructionFragment"
        android:name="ntutifm.game.google.ui.oil.InstructionFragment"
        android:label="InstructionFragment" >
        <action
            android:id="@+id/action_instructionFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="ntutifm.game.google.ui.oil.AboutFragment"
        android:label="AboutFragment" >
        <action
            android:id="@+id/action_aboutFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="ntutifm.game.google.ui.notification.NotificationFragment"
        android:label="NotificationFragment" >
        <action
            android:id="@+id/action_notificationFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/oilFragment"
        android:name="ntutifm.game.google.ui.oil.OilFragment"
        android:label="OilFragment" >
        <action
            android:id="@+id/action_oilFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/routeFragment"
        android:name="ntutifm.game.google.ui.route.RouteFragment"
        android:label="RouteFragment" >
        <action
            android:id="@+id/action_routeFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_routeFragment_to_CCTVFragment"
            app:destination="@id/CCTVFragment" />
        <action
            android:id="@+id/action_routeFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_routeFragment_to_roadFragment"
            app:destination="@id/roadFragment" />
        <action
            android:id="@+id/action_routeFragment_to_oilStationFragment"
            app:destination="@id/oilStationFragment" />
        <action
            android:id="@+id/action_routeFragment_to_parkingFragment"
            app:destination="@id/parkingFragment" />
    </fragment>
    <fragment
        android:id="@+id/CCTVFragment"
        android:name="ntutifm.game.google.ui.parking.CCTVFragment"
        android:label="CCTVFragment" >
        <action
            android:id="@+id/action_CCTVFragment_to_routeFragment"
            app:destination="@id/routeFragment" />
    </fragment>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="ntutifm.game.google.ui.camera.CameraFragment"
        android:label="CameraFragment" >
        <action
            android:id="@+id/action_cameraFragment_to_routeFragment"
            app:destination="@id/routeFragment" />
    </fragment>
    <fragment
        android:id="@+id/roadFragment"
        android:name="ntutifm.game.google.ui.road.RoadFragment"
        android:label="RoadFragment" >
        <action
            android:id="@+id/action_roadFragment_to_routeFragment"
            app:destination="@id/routeFragment" />
    </fragment>
    <fragment
        android:id="@+id/oilStationFragment"
        android:name="ntutifm.game.google.ui.oilStation.OilStationFragment"
        android:label="OilStationFragment" >
        <action
            android:id="@+id/action_oilStationFragment_to_routeFragment"
            app:destination="@id/routeFragment" />
    </fragment>
    <fragment
        android:id="@+id/parkingFragment"
        android:name="ntutifm.game.google.ui.parking.ParkingFragment"
        android:label="ParkingFragment" >
        <action
            android:id="@+id/action_parkingFragment_to_routeFragment"
            app:destination="@id/routeFragment" />
    </fragment>
</navigation>